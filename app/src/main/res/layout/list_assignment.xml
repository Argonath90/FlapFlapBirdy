<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/elc_amx"
        android:layout_width="150dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:id="@+id/elcamx"/>
    <ImageView
        android:src="@drawable/ColdWar"
        android:layout_width="150dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:id="@+id/war"
        android:layout_below="@id/elcamx"/>
    <ImageView
        android:src="@drawable/sunset"
        android:layout_width="150dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:id="@+id/sunset"
        android:layout_below="@id/war"/>
    <ImageView
        android:src="@drawable/Rcar"
        android:layout_width="150dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:id="@+id/redcar"
        android:layout_below="@id/sunset"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/elcamx"
        android:layout_toRightOf="@+id/elcamx"
        android:orientation="vertical">

        <TextView
            android:id="@+id/elcTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ELC AMX"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/elcText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/elcTitle"
            android:text="The AMX ELC bis was a prototype for a small and light yet powerful tank destroyer"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/warTitle"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Bomb"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/warText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/warTitle"
            android:text="The atomical bomb was super big and nasty"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/sunsetTitle"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Sunset"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sunsetText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/sunsetTitle"
            android:text="Sunsets occur every day when the sun is about to go beyond the horizon and gives off pretty colors"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/carTitle"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Red Car"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/carText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/carTitle"
            android:text="The Red Car, also known as the Car That is Red, is a car which has a red color and reflects red light, giving it the appearance of what we think of as 'red'"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>


</RelativeLayout>